<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jarthur.timekeeper_droid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.list_activities.TimesheetList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.show_activities.ActivityShow"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.list_activities.StoryCardList"
            android:label="@string/title_activity_story_card_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.list_activities.ProjectsList"
            android:label="@string/title_activity_projects_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.show_activities.ProjectShow"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.show_activities.StoryCardShow"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.edit_activities.ProjectEdit"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
